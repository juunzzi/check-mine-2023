{
    "name": "payment_root",
    "packageManager": "yarn@3.3.1",
    "workspaces": {
        "packages": [
            "packages/**/*"
        ]
    },
    "devDependencies": {
        "@financial/eslint-config-fe": "^1.5.0",
        "eslint": "^8.32.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.3",
        "typescript": "^4.9.4"
    },
    "scripts": {
        "postinstall": "husky install",
        "lint-staged": "lint-staged",
        "prettier": "prettier --check \"./**/*.{js,ts,tsx,json}\"",
        "prettier:fix": "prettier --write \"./**/*.{js,ts,tsx,json}\""
    },
    "lint-staged": {
        "**/*.{ts,tsx}": [
            "eslint --fix && yarn prettier:fix"
        ]
    }
}
