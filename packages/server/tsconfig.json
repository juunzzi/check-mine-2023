{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src"]
}
